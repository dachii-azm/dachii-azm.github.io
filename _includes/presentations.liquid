<div class="presentations">
  {% if site.presentations != blank %}
    {% assign presentations_size = site.presentations | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.achievements.scrollable and presentations_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign presentations = site.presentations | reverse %}
        {% if include.limit and site.achievements.limit %}
          {% assign presentations_limit = site.achievements.limit %}
        {% else %}
          {% assign presentations_limit = presentations_size %}
        {% endif %}
        {% for item in presentations limit: presentations_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="presentations-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No presentations so far...</p>
  {% endif %}
</div>
